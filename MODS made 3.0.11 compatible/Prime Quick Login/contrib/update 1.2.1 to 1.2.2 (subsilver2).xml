<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.5.xsd">
	<header>
		<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
		<title lang="en">Prime Quick Login</title>
		<description lang="en">This file provides instructions for upgrading the subsilver2 template portions of this MOD. See the main install file for any additional information about the MOD.</description>
		<author-group>
			<author>
				<realname>Ken F. Innes IV</realname>
				<email>primehalo@gmail.com</email>
				<username>primehalo</username>
			</author>
		</author-group>
		<mod-version>1.2.2</mod-version>
		<installation>
			<level>easy</level>
			<time>60</time>
			<target-version>3.0.2</target-version>
		</installation>
		<link-group>
			<link type="parent" href="../install.xml" lang="en">Main Install File</link>
		</link-group>
	</header>
	<action-group>
		<copy>
			<file from="root/styles/subsilver2/template/prime_quick_login.html" to="styles/subsilver2/template/prime_quick_login.html" />
		</copy>
		<open src="styles/prosilver/templates/overall_header">
			<edit>
				<find><![CDATA[<!-- ELSEIF S_PRIME_QUICK_LOGIN and not AUTO_REFRESH --><form method="post" action="{S_PRIME_QUICK_LOGIN}"><span class="genmed">{L_PRIME_QUICK_LOGIN_USERNAME}:</span> <input tabindex="100" class="post" type="text" name="username" size="10" />&nbsp; <span class="genmed">{L_PRIME_QUICK_LOGIN_PASSWORD}:</span> <input tabindex="101" class="post" type="password" name="password" size="10" />&nbsp; <!-- IF S_AUTOLOGIN_ENABLED --> <input tabindex="102" type="checkbox" class="radio" name="autologin" />  <span class="gensmall">{L_PRIME_QUICK_LOGIN_REMEMBER}</span><!-- ENDIF -->]]></find>
				<inline-edit>
					<inline-find><![CDATA[<!-- ELSEIF S_PRIME_QUICK_LOGIN and not AUTO_REFRESH --><form method="post" action="{S_PRIME_QUICK_LOGIN}"><span class="genmed">{L_PRIME_QUICK_LOGIN_USERNAME}:</span> <input tabindex="100" class="post" type="text" name="username" size="10" />&nbsp; <span class="genmed">{L_PRIME_QUICK_LOGIN_PASSWORD}:</span> <input tabindex="101" class="post" type="password" name="password" size="10" />&nbsp; <!-- IF S_AUTOLOGIN_ENABLED --> <input tabindex="102" type="checkbox" class="radio" name="autologin" />  <span class="gensmall">{L_PRIME_QUICK_LOGIN_REMEMBER}</span><!-- ENDIF -->&nbsp; <input tabindex="103" type="submit" class="btnmain" name="login" value="{L_LOGIN}" /></form><!-- ENDIF -->]]></inline-find>
					<inline-action type="replace-with"><![CDATA[<!-- ENDIF --><!-- INCLUDE prime_quick_login.html -->]]></inline-action>
		       </inline-edit>
			</edit>
		</open>
	</action-group>
</mod>
