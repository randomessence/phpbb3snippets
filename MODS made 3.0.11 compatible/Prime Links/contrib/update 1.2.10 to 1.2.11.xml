<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.5.xsd">
	<header>
		<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
		<title lang="en">Prime Links - Update 1.2.10 to 1.2.11</title>
		<description lang="en">This file provides instructions for upgrading the MOD. See the main install file for any additional information about the MOD. If you have not installed the optional user website links feature, then you can skip all of these file edits.</description>
		<author-notes lang="en">See the main install file for this information.</author-notes>
		<author-group>
			<author>
				<realname>Ken F. Innes IV</realname>
				<email>primehalo@gmail.com</email>
				<username>primehalo</username>
			</author>
		</author-group>
		<mod-version>1.2.11</mod-version>
		<installation>
			<level>easy</level>
			<time>120</time>
			<target-version>3.0.8</target-version>
		</installation>
		<link-group>
			<link type="parent" href="../install.xml" lang="en">Main Install File</link>
		</link-group>
	</header>
	<action-group>
		<copy>
			<file from="root/includes/prime_links.php" to="includes/prime_links.php" />
		</copy>

				<open src="styles/prosilver/template/memberlist_body.html">
			<edit>
				<find><![CDATA[{EXTERNAL_LINK_TARGET}]]></find>
				<inline-edit>
					<inline-find><![CDATA[{EXTERNAL_LINK_TARGET}]]></inline-find>
					<inline-action type="replace-with">{EXTERNAL_LINK_ATTRIBUTES}</inline-action>
				</inline-edit>
			</edit>
		</open>

		<open src="styles/prosilver/template/memberlist_view.html">
			<edit>
				<find><![CDATA[{EXTERNAL_LINK_TARGET}]]></find>
				<inline-edit>
					<inline-find><![CDATA[{EXTERNAL_LINK_TARGET}]]></inline-find>
					<inline-action type="replace-with">{EXTERNAL_LINK_ATTRIBUTES}</inline-action>
				</inline-edit>
			</edit>
		</open>

		<open src="styles/prosilver/template/ucp_pm_viewmessage.html">
			<edit>
				<find><![CDATA[{EXTERNAL_LINK_TARGET}]]></find>
				<inline-edit>
					<inline-find><![CDATA[{EXTERNAL_LINK_TARGET}]]></inline-find>
					<inline-action type="replace-with">{EXTERNAL_LINK_ATTRIBUTES}</inline-action>
				</inline-edit>
			</edit>
		</open>

		<open src="styles/prosilver/template/viewtopic_body.html">
			<edit>
				<find><![CDATA[{EXTERNAL_LINK_TARGET}]]></find>
				<inline-edit>
					<inline-find><![CDATA[{EXTERNAL_LINK_TARGET}]]></inline-find>
					<inline-action type="replace-with">{EXTERNAL_LINK_ATTRIBUTES}</inline-action>
				</inline-edit>
			</edit>
		</open>

	</action-group>
</mod>
